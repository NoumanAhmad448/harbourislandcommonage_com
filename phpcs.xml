<?xml version="1.0"?>
<ruleset name="Laravel Standards">
    <description>PSR12 Laravel Standards</description>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <exclude-pattern>*/database/migrations/*</exclude-pattern>
    <exclude-pattern>*/resources/lang/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="standard" value="PSR12"/>
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>